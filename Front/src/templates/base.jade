                a.home-menu-icon.home-icon-playstation(href="http://psnprofiles.com/dtysky", target="_blank")
            div.home-menu-hr1
            div
                div
                    a#home-menu-home(href="/") Home
                div.home-menu-tag-ath
                    a#home-menu-tags(href="/tags") Tags
                    a#home-menu-authors(href="/authors") Authors
            div.home-menu-hr2
            p.home-menu-links-p Links
            div.home-menu-links
                a#home-menu-proj(href="http://proj.dtysky.moe", target="_blank") Projects
                button#home-menu-friend Friends
            div.home-menu-hr3
